def power(x, n):
 if n == 0:
  return 1
 return x * power(x, n - 1)

# Пример использования
print(power(2, 3)) # 8
# Объяснение:
def power(x, n): # Функция принимает число x и степень n
    if n == 0: # Базовый случай: любое число в степени 0 равно 1
        return 1
    return x * power(x, n - 1) # Рекурсивно умножаем x n раз
print(power(2, 3)) # 2^3 = 8
